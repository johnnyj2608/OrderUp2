<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ASCC</title>
    <link rel="icon" href="/img/favicon.ico">
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row header">
            <div class="col-auto">
                <i id="calendar-icon" class="dropdown fas fa-calendar-alt"></i>
            </div>
            <div class="col text-center" id="project-title">
                <%= __("titles.project_title") %>
            </div>
            <div class="col-auto">
                <div class="dropdown">
                    <div class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-language"></i>
                    </div>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" data-lang="en"><%= __("languages.english") %></a></li>
                        <li><a class="dropdown-item" href="#" data-lang="zh"><%= __("languages.chinese") %></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="row sticky-row">
                <div class="col-auto">
                    <input type="date" id="datePicker" value="<%= selectedDate %>" style="opacity: 0;">
                </div>
                <div class="col text-center">
                    <h3><%= formattedDate %></h3>
                </div>
                <div class="col-auto">
                    <input style="opacity: 0;">
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-12 col-md-6">
                    <input type="text" id="searchBar" placeholder="<%= __('titles.search_name') %>" onkeyup="searchNames()">
                    <ul id="nameList">
                        <% names.forEach(({ id, name, menu }, index) => { %>
                            <li data-index="<%= id %>" 
                                data-menu="<%= menu %>" 
                                onclick="handleNameClick(this)">
                                <span class="name"><%= id %>. <%= name %></span>
                                <span class="menu-type"><%= menu %></span>
                            </li>
                        <% }) %>
                    </ul>
                </div>
                <% function renderMealSection(mealType, menu) { %>
                    <% menu.forEach(({ name, image }, index) => { %>
                        <div class="col-md-4 col-sm-6 mb-4">
                            <div id="btn-<%= mealType.charAt(0) %>-<%= name %>" 
                                data-text="<%= name %>" 
                                onclick="handleMealClick(this)" 
                                class="panel pointer w-100" 
                                data-order="<%= index %>" 
                                data-meal-type="<%= mealType %>">
                                <img src="<%= image ? image : '/img/default.png' %>" 
                                    class="panel-img w-100" 
                                    onerror="this.onerror=null; this.src='/img/default.png';" />
                                <p class="panel-title"><%= name %></p>
                            </div>
                        </div>
                    <% }) %>
                <% } %>
                <div class="col-12 col-md-6">
                    <div class="row ml-1">
                        <h2 id="breakfastSection"><%= __("titles.breakfast") %></h2>
                    </div>
                    <div class="row justify-content-center">
                        <% renderMealSection('breakfast', breakfastMenu); %>
                    </div>
                    <div class="row ml-1">
                        <h2 id="lunchSection"><%= __("titles.lunch") %></h2>
                    </div>
                    <div class="row justify-content-center">
                        <% renderMealSection('lunch', lunchMenu); %>     
                    </div>         
                </div>
            </div>
        </div>
        <div class="row footer align-items-center">
            <div class="col button-container">
                <button class="actionButton" onclick="window.location.href='/orders'"><%= __("buttons.orders") %></button>
                <button id="submitButton" class="actionButton disabled" onclick="submitOrder(this)"><%= __("buttons.submit_order") %></button>
            </div>
        </div>
    </div>

    <script src="/js/datePicker.js"></script>
    <script src="/js/settings.js"></script>
    <script src="/js/main.js"></script>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"
    ></script>
    <script src="https://kit.fontawesome.com/a8eb5cb089.js" crossorigin="anonymous"></script>
</body>
</html>