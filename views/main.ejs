<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ASCC</title>
    <link rel="icon" href="/img/favicon.ico">
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row header align-items-center">
            <div class="col"></div>
            <div class="col text-center">
                <%= __("project_title") %>
            </div>
            <div class="col text-right">
                <div class="dropdown">
                    <div class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-language"></i>
                    </div>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" data-lang="en"><%= __("english") %></a></li>
                        <li><a class="dropdown-item" href="#" data-lang="zh"><%= __("chinese") %></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div>
            <div class="content">
                <br>
                <div class="row justify-content-center">
                    <div class="col-12 d-flex justify-content-around">
                        <button class="dayButton" id="monday"><%= __('monday') %></button>
                        <button class="dayButton" id="tuesday"><%= __('tuesday') %></button>
                        <button class="dayButton" id="wednesday"><%= __('wednesday') %></button>
                        <button class="dayButton" id="thursday"><%= __('thursday') %></button>
                        <button class="dayButton" id="friday"><%= __('friday') %></button>
                        <button class="dayButton" id="saturday"><%= __('saturday') %></button>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col text-center">
                        <h2 id="breakfast-section"><%= __("breakfast") %></h2>
                        <% breakfastMenu.forEach((title, index) => { %>
                            <% if (index % 3 === 0) { %>
                                <div class="row">
                            <% } %>
                            
                            <div class="col-md-4 mb-4">
                                <div id="btn-<%= title %>" 
                                    data-text="<%= title %>" 
                                    onclick="handleMealClick('Breakfast', '<%= title %>');" 
                                    class="panel w-100" 
                                    data-order="<%= index %>">
                                    <img src="<%= '/img/default.png' %>" 
                                    class="panel-img w-100" />
                                    <h5 class="panel-title"><%= title %></h5>
                                </div>
                            </div>
            
                            <% if ((index + 1) % 3 === 0 || index === breakfastMenu.length - 1) { %>
                                </div>
                            <% } %>
                        <% }) %>
                        <br>
                        <h2 id="lunch-section"><%= __("lunch") %></h2>
                        <% lunchMenu.forEach((title, index) => { %>
                            <% if (index % 3 === 0) { %>
                                <div class="row">
                            <% } %>
                            
                            <div class="col-md-4 mb-4">
                                <div id="btn-<%= title %>" 
                                    data-text="<%= title %>" 
                                    onclick="handleMealClick('Lunch', '<%= title %>');" 
                                    class="panel w-100" 
                                    data-order="<%= index %>">
                                    <img src="<%= '/img/default.png' %>" 
                                    class="panel-img w-100" />
                                    <h5 class="panel-title"><%= title %></h5>
                                </div>
                            </div>
            
                            <% if ((index + 1) % 3 === 0 || index === lunchMenu.length - 1) { %>
                                </div>
                            <% } %>
                        <% }) %>
                    </div>
                    <div class="col text-center">
                        <ul id="nameList">
                            <% names.forEach(name => { %>
                                <li onclick="handleNameClick('<%= name %>')"><%= name %></li>
                            <% }) %>
                        </ul>
                    </div>
                </div>            
            </div>
            <div class="row footer align-items-center">
                <div class="col text-center">
                    <button id="menuButton" class="actionButton disabled"><%= __("submit_order") %></button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const daysOfWeek = [
            "<%= __('today') %>",
            "<%= __('monday') %>",
            "<%= __('tuesday') %>",
            "<%= __('wednesday') %>",
            "<%= __('thursday') %>",
            "<%= __('friday') %>",
            "<%= __('saturday') %>",
        ];
    </script>
    <script src="/js/settings.js"></script>
    <script src="/js/main.js"></script>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"
    ></script>
    <script src="https://kit.fontawesome.com/a8eb5cb089.js" crossorigin="anonymous"></script>
</body>
</html>