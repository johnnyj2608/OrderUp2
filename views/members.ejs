<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ASCC</title>
    <link rel="icon" href="/img/favicon.ico">
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row header">
            <div class="col-auto">
                <div id="view-header" class="dropdown">
                    <div class="dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-filter"></i>
                    </div>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" data-lang="en"><%= __("monday") %></a></li>
                        <li><a class="dropdown-item" href="#" data-lang="zh"><%= __("tuesday") %></a></li>
                        <li><a class="dropdown-item" href="#" data-lang="en"><%= __("wednesday") %></a></li>
                        <li><a class="dropdown-item" href="#" data-lang="zh"><%= __("thursday") %></a></li>
                        <li><a class="dropdown-item" href="#" data-lang="en"><%= __("friday") %></a></li>
                        <li><a class="dropdown-item" href="#" data-lang="zh"><%= __("saturday") %></a></li>
                    </ul>
                </div>
                <input type="file" id="fileInput" accept=".csv">
                <i id="edit-header" class="dropdown fas fa-plus hidden"></i>
            </div>
            <div class="col text-center" id="project-title">
                <%= __("project_title") %>
            </div>
            <div class="col-auto">
                <div class="dropdown">
                    <span onclick="handleEditClick();">
                        <i id="edit-button" class="fas fa-pencil-alt"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="content">
            <br>
            <h3 class="text-center">Member List</h3>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th style="width: 5%;">ID</th>
                        <th style="width: 35%;">Name</th>
                        <th style="width: 10%;">Monday</th>
                        <th style="width: 10%;">Tuesday</th>
                        <th style="width: 10%;">Wednesday</th>
                        <th style="width: 10%;">Thursday</th>
                        <th style="width: 10%;">Friday</th>
                        <th style="width: 10%;">Saturday</th>
                    </tr>
                </thead>
                <tbody id="data-body" class="view-mode">
                    <% memberList.forEach(member => { %>
                        <tr>
                            <td><%= member.id %></td>
                            <td><%= member.name %></td>
                            <td><%- member.monday ? "<i class='fas fa-check'></i>" : "<i class='fas fa-times'></i>" %></td>
                            <td><%- member.tuesday ? "<i class='fas fa-check'></i>" : "<i class='fas fa-times'></i>" %></td>
                            <td><%- member.wednesday ? "<i class='fas fa-check'></i>" : "<i class='fas fa-times'></i>" %></td>
                            <td><%- member.thursday ? "<i class='fas fa-check'></i>" : "<i class='fas fa-times'></i>" %></td>
                            <td><%- member.friday ? "<i class='fas fa-check'></i>" : "<i class='fas fa-times'></i>" %></td>
                            <td><%- member.saturday ? "<i class='fas fa-check'></i>" : "<i class='fas fa-times'></i>" %></td>

                        </tr>
                    <% }); %>
                </tbody>
                <tbody id="data-body" class="edit-mode hidden"></tbody>
            </table>
            
            <br>         

            <div id="view-footer" class="row footer align-items-center">
                <div class="col button-container">
                    <a href="/" class="actionButton"><%= __("back") %></a>
                    <div class="dropdown">
                        <button class="dropdown-toggle actionButton w-100" data-bs-toggle="dropdown" aria-expanded="false">
                            <%= __("views") %>
                        </button>
                        <ul class="dropdown-menu w-100 text-center">
                            <li><a class="dropdown-item" href="/orders">Orders</a></li>
                            <li><a class="dropdown-item" href="/members">Members</a></li>
                            <li><a class="dropdown-item" href="/history">History</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div id="edit-footer" class="row footer align-items-center hidden">
                <div class="col button-container">
                    <button id="cancelButton" class="actionButton" onclick="handleCancel()"><%= __("cancel") %></button>
                    <span>
                        <button id="undo-button" onclick="undo()" class="actionButton desaturate">
                            <i class="fas fa-undo"></i>
                        </button>
                        <button id="redo-button" onclick="redo()" class="actionButton desaturate">
                            <i class="fas fa-redo"></i>
                        </button>
                    </span>
                    <button id="saveButton" class="actionButton" onclick="handleSave()"><%= __("save") %></button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/editMembers.js"></script>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"
    ></script>
    <script src="https://kit.fontawesome.com/a8eb5cb089.js" crossorigin="anonymous"></script>
</body>
</html>