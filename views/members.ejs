<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ASCC</title>
    <link rel="icon" href="/img/favicon.ico">
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row header">
            <div class="col-auto">
                <div class="dropdown">
                    <span data-day="0" onclick="handleDayClick(this);">
                        <%= __("today") %>
                        <i class="fas fa-calendar" id="today-icon"></i> 
                    </span>
                </div>
            </div>
            <div class="col text-center" id="project-title">
                <%= __("project_title") %>
            </div>
            <div class="col-auto">
                <div class="dropdown">
                    <span onclick="handleEditClick();">
                        <i id="edit-button" class="fas fa-pencil-alt"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="content">
            <br>
            <div class="row">
                <% const days = ['monday', 'tuesday', 'wednesday', 'thursday', 'friday', 'saturday']; %>
                <% days.forEach((day, index) => { %>
                    <div class="col-4 col-md-2 mb-2">
                        <div class="dayButton" data-day="<%= index + 1 %>" onclick="handleDayClick(this)"><%= __(day) %></div>
                    </div>
                <% }); %>
            </div>
            
            <table class="table table-striped table-bordered mt-4">
                <thead>
                    <tr>
                        <th style="width: 10%;">ID</th>
                        <th style="width: 40%;">Name</th>
                        <th style="width: 25%;">Breakfast</th>
                        <th style="width: 25%;">Lunch</th>
                    </tr>
                </thead>
                <tbody id="data-body" class="view-mode">
                    <% memberList.forEach(member => { %>
                        <tr>
                            <td><%= member.id %></td>
                            <td><%= member.name %></td>
                            <td><%= member.breakfast %></td>
                            <td><%= member.lunch %></td>
                        </tr>
                    <% }); %>
                </tbody>
                <tbody id="data-body" class="edit-mode hidden"></tbody>
            </table>
            
            <br>         

            <div id="view-footer" class="row footer align-items-center">
                <div class="col button-container">
                    <a href="/" class="actionButton"><%= __("back") %></a>
                    <div class="dropdown">
                        <button class="dropdown-toggle actionButton w-100" data-bs-toggle="dropdown" aria-expanded="false">
                            <%= __("views") %>
                        </button>
                        <ul class="dropdown-menu w-100 text-center">
                            <li><a class="dropdown-item" href="/response">Responses</a></li>
                            <li><a class="dropdown-item" href="/members">Members</a></li>
                            <li><a class="dropdown-item" href="/history">History</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div id="edit-footer" class="row footer align-items-center hidden">
                <div class="col button-container">
                    <button id="cancelButton" class="actionButton" onclick="handleCancel()"><%= __("cancel") %></button>
                    <span>
                        <button id="undo-button" onclick="undo()" class="actionButton desaturate">
                            <i class="fas fa-undo"></i>
                        </button>
                        <button id="redo-button" onclick="redo()" class="actionButton desaturate">
                            <i class="fas fa-redo"></i>
                        </button>
                    </span>
                    <button id="saveButton" class="actionButton" onclick="handleSave()"><%= __("save") %></button>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/dayNav.js"></script>
    <script src="/js/editTables.js"></script>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"
    ></script>
    <script src="https://kit.fontawesome.com/a8eb5cb089.js" crossorigin="anonymous"></script>
</body>
</html>