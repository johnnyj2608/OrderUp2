<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ASCC</title>
    <link rel="icon" href="/img/favicon.ico">
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row header">
            <div class="col-auto">
                <div class="dropdown">
                    <span>
                        <%= __("today") %>
                        <i class="fas fa-calendar" id="today-icon"></i> 
                    </span>
                </div>
            </div>
            <div class="col text-center" id="project-title">
                <%= __("project_title") %>
            </div>
            <div class="col-auto">
                <div class="dropdown">
                    <span onclick="handleEditClick();">
                        <i id="edit-button" class="fas fa-pencil-alt"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="content">
            <br>
            <div id="data-container" data-result='<%- JSON.stringify(result) %>'></div>
            <div class="row">
                <div class="col-md-3">
                    <div class="nav flex-column nav-pills">
                        <% for (const date in result) { %>
                            <button class="nav-link pointer <% if (Object.keys(result)[6] === date) { %> active <% } %>" 
                                    id="<%= date %>-tab" 
                                    data-date="<%= date %>" 
                                    onclick="updateTable('<%= date %>')">
                                <%= date %>
                            </button>
                        <% } %>
                    </div>
                </div>
                
                <div class="col-md-9">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Breakfast</th>
                                <th>Lunch</th>
                                <th>Timestamp</th>
                            </tr>
                        </thead>
                        <tbody id="data-body" class="view-mode">
                            <% 
                            const todayDate = Object.keys(result)[6];
                            result[todayDate].forEach(item => { %>
                                <tr>
                                    <td><%= item.name %></td>
                                    <td><%= item.breakfast %></td>
                                    <td><%= item.lunch %></td>
                                    <td><%= item.timestamp %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                        <tbody id="data-body" class="edit-mode hidden">
                        </tbody>
                    </table>
                </div>
            </div>
            
            <div id="view-footer" class="row footer align-items-center">
                <div class="col button-container">
                    <a href="/" class="actionButton"><%= __("back") %></a>
                    <div class="dropdown">
                        <button class="dropdown-toggle actionButton w-100" data-bs-toggle="dropdown" aria-expanded="false">
                            <%= __("views") %>
                        </button>
                        <ul class="dropdown-menu w-100 text-center">
                            <li><a class="dropdown-item" href="/response">Responses</a></li>
                            <li><a class="dropdown-item" href="/members">Members</a></li>
                            <li><a class="dropdown-item" href="/history">History</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div id="edit-footer" class="row footer align-items-center hidden">
                <div class="col button-container">
                    <button id="cancelButton" class="actionButton" onclick="handleCancel()"><%= __("cancel") %></button>
                    <span>
                        <button id="undo-button" onclick="undo()" class="actionButton desaturate">
                            <i class="fas fa-undo"></i>
                        </button>
                        <button id="redo-button" onclick="redo()" class="actionButton desaturate">
                            <i class="fas fa-redo"></i>
                        </button>
                    </span>
                    <button id="saveButton" class="actionButton" onclick="handleSave()"><%= __("save") %></button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const result = JSON.parse(document.getElementById('data-container').getAttribute('data-result'));
    </script>
    <script src="/js/editMode.js"></script>
    <script src="/js/history.js"></script>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"
    ></script>
    <script src="https://kit.fontawesome.com/a8eb5cb089.js" crossorigin="anonymous"></script>
</body>
</html>